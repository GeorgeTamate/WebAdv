<div class="jumbotron text-center">
    <h1>Create Movie</h1>
    <p>Complete the form to create your movie.</p>
</div>

<div class="container">
    <form class="form-horizontal" method="POST" enctype="multipart/form-data">
        <div class="form-group {{nameError}}">
            <label for="name" class="control-label col-sm-2">Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control {{nameAlert}}" name="name" placeholder="{{namePlaceholder}}">
            </div>
        </div>
        <div class="form-group {{descriptionError}}">
            <label for="description" class="control-label col-sm-2">Description:</label>
            <div class="col-sm-10">
                <textarea class="form-control {{descriptionAlert}}" rows="5" name="description" placeholder="{{descriptionPlaceholder}}"></textarea>
            </div>
        </div>
        <div class="form-group {{keywordsError}}">
            <label for="keywords" class="control-label col-sm-2">Keywords:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control {{keywordsAlert}}" name="keywords" placeholder="{{keywordsPlaceholder}}">
            </div>
        </div>
        <div class="form-group {{pictureError}}">
            <label for="image" class="control-label col-sm-2">Picture:</label>
            <div class="col-sm-5">
                <input type="file" class="form-control" name="image" accept="image/*" >
            </div>
            <div class="text-danger col-sm-5">{{pictureAlertMsg}}</div>
        </div>
        <button type="submit" class="btn btn-primary col-sm-offset-2 col-sm-2">Submit</button>
    </form>
</div>